<body>
    <div class="overlay"></div>
    
    <div class="content">
        <header>
            <h1>Happy Halloween!</h1>
            <div class="subtitle">Spooky Halloween Experience</div>
        </header>
        
        <div class="subtitles-container">
            <div id="subtitles"></div>
        </div>
        
        <div class="controls">
            <button class="btn" id="startBtn">Start Story</button>
            <button class="btn" id="pauseBtn">Pause</button>
        </div>
        
        <div class="pumpkin">üéÉ</div>
        <div class="bat">ü¶á</div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const subtitles = document.getElementById('subtitles');
            const startBtn = document.getElementById('startBtn');
            const pauseBtn = document.getElementById('pauseBtn');
            
            // –¢–µ–∫—Å—Ç –¥–ª—è –æ—Ç–æ–±—Ä–∞–∂–µ–Ω–∏—è (—Ä–∞–∑–±–∏—Ç –Ω–∞ –ø—Ä–µ–¥–ª–æ–∂–µ–Ω–∏—è)
            const sentences = [
                "The phrase means that the children are asking for a treat, usually candy, and if they don't get one, they might play a small trick on the homeowner.",
                "This custom is a fun part of Halloween celebrations when kids collect sweets from their neighbours."
            ];
            
            let currentSentenceIndex = 0;
            let currentWordIndex = 0;
            let isPlaying = false;
            let wordInterval;
            let sentenceTimeout;
            
            // –§—É–Ω–∫—Ü–∏—è –¥–ª—è –æ—Ç–æ–±—Ä–∞–∂–µ–Ω–∏—è —Å–ª–æ–≤ –ø–æ –æ–¥–Ω–æ–º—É
            function displayWords() {
                if (!isPlaying) return;
                
                const sentence = sentences[currentSentenceIndex];
                const words = sentence.split(' ');
                
                // –û—á–∏—â–∞–µ–º —Å—É–±—Ç–∏—Ç—Ä—ã
                subtitles.innerHTML = '';
                
                // –°–æ–∑–¥–∞–µ–º —ç–ª–µ–º–µ–Ω—Ç—ã –¥–ª—è –∫–∞–∂–¥–æ–≥–æ —Å–ª–æ–≤–∞
                words.forEach((word, index) => {
                    const wordElement = document.createElement('span');
                    wordElement.className = 'word';
                    wordElement.textContent = word + ' ';
                    subtitles.appendChild(wordElement);
                });
                
                // –ü–æ–¥—Å–≤–µ—á–∏–≤–∞–µ–º —Å–ª–æ–≤–∞ –ø–æ –æ–¥–Ω–æ–º—É
                const wordElements = subtitles.querySelectorAll('.word');
                
                function highlightNextWord() {
                    if (!isPlaying) return;
                    
                    // –£–±–∏—Ä–∞–µ–º –ø–æ–¥—Å–≤–µ—Ç–∫—É —Å –ø—Ä–µ–¥—ã–¥—É—â–µ–≥–æ —Å–ª–æ–≤–∞
                    if (currentWordIndex > 0) {
                        wordElements[currentWordIndex - 1].classList.remove('highlight');
                    }
                    
                    // –ü–æ–¥—Å–≤–µ—á–∏–≤–∞–µ–º —Ç–µ–∫—É—â–µ–µ —Å–ª–æ–≤–æ
                    if (currentWordIndex < wordElements.length) {
                        wordElements[currentWordIndex].classList.add('highlight');
                        currentWordIndex++;
                        
                        // –ó–∞–ø—É—Å–∫–∞–µ–º —Å–ª–µ–¥—É—é—â–∏–π —Ç–∞–π–º–µ—Ä
                        wordInterval = setTimeout(highlightNextWord, 150);
                    } else {
                        // –í—Å–µ —Å–ª–æ–≤–∞ –≤ –ø—Ä–µ–¥–ª–æ–∂–µ–Ω–∏–∏ –ø–æ–∫–∞–∑–∞–Ω—ã
                        currentWordIndex = 0;
                        
                        // –ü–µ—Ä–µ—Ö–æ–¥–∏–º –∫ —Å–ª–µ–¥—É—é—â–µ–º—É –ø—Ä–µ–¥–ª–æ–∂–µ–Ω–∏—é —á–µ—Ä–µ–∑ 2 —Å–µ–∫—É–Ω–¥—ã
                        sentenceTimeout = setTimeout(() => {
                            currentSentenceIndex++;
                            if (currentSentenceIndex < sentences.length) {
                                displayWords();
                            } else {
                                // –í—Å–µ –ø—Ä–µ–¥–ª–æ–∂–µ–Ω–∏—è –ø–æ–∫–∞–∑–∞–Ω—ã
                                isPlaying = false;
                                startBtn.textContent = 'Restart Story';
                            }
                        }, 2000);
                    }
                }
                
                // –ó–∞–ø—É—Å–∫–∞–µ–º –ø–æ–¥—Å–≤–µ—Ç–∫—É —Å–ª–æ–≤
                highlightNextWord();
            }
            
            // –û–±—Ä–∞–±–æ—Ç—á–∏–∫–∏ –∫–Ω–æ–ø–æ–∫
            startBtn.addEventListener('click', function() {
                if (!isPlaying) {
                    isPlaying = true;
                    startBtn.textContent = 'Playing...';
                    
                    // –ï—Å–ª–∏ —ç—Ç–æ —Ä–µ—Å—Ç–∞—Ä—Ç, —Å–±—Ä–∞—Å—ã–≤–∞–µ–º –∏–Ω–¥–µ–∫—Å—ã
                    if (currentSentenceIndex >= sentences.length) {
                        currentSentenceIndex = 0;
                        currentWordIndex = 0;
                    }
                    
                    displayWords();
                }
            });
            
            pauseBtn.addEventListener('click', function() {
                if (isPlaying) {
                    isPlaying = false;
                    startBtn.textContent = 'Resume';
                    clearTimeout(wordInterval);
                    clearTimeout(sentenceTimeout);
                } else {
                    isPlaying = true;
                    startBtn.textContent = 'Playing...';
                    displayWords();
                }
            });
        });
    </script>
</body>
</html>
