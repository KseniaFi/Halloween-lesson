            flex-wrap: wrap;
        }
        .column {
            width: 48%;
            display: flex;
            flex-direction: column;
            gap: 15px;
        }
        /* Стили для карточек */
        .card {
            min-height: 100px;
            border: 2px solid #8B4513;
            border-radius: 8px;
            padding: 15px;
            box-sizing: border-box;
            display: flex;
            align-items: center;
            justify-content: center;
            text-align: center;
            font-size: 1.8em; /* Крупный шрифт */
            font-weight: bold;
            background-color: #fff8e1;
            color: #8B4513;
            break-inside: avoid; /* Важно: предотвращает разрыв карточки на страницах в PDF */
            page-break-inside: avoid;
        }
        .image-card {
            background-color: #f5f5f5;
        }
        .image-card img {
            max-width: 100%;
            max-height: 150px;
            display: block;
            margin: 0 auto;
        }
        .button-container {
            text-align: center;
            margin-top: 30px;
        }
        button {
            background-color: #8B4513;
            color: white;
            border: none;
            padding: 15px 30px;
            font-size: 1.2em;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s;
        }
        button:hover {
            background-color: #a0522d;
        }
        /* Обеспечивает корректное отображение в PDF */
