<body>
    <div class="container" id="content">
        <h1>Halloween Matching Task</h1>
        
        <div class="instructions">
            Сопоставьте изображения с соответствующими словами
        </div>
        
        <div class="matching-task">
            <div class="images-column" id="images-column">
                <!-- Images will be inserted here by JavaScript -->
            </div>
            
            <div class="words-column" id="words-column">
                <!-- Words will be inserted here by JavaScript in random order -->
            </div>
        </div>
    </div>
    
    <button class="download-btn" id="download-btn">Скачать PDF</button>

    <script>
        // Data for images and words
        const items = [
            { image: 'Photos/IMG_20251020_175109_595.jpg', word: 'Monster' },
            { image: 'Photos/IMG_20251020_123050_219.jpg', word: 'Spider' },
            { image: 'Photos/IMG_20251020_122957_466.jpg', word: 'Mummy' },
            { image: 'Photos/IMG_20251019_161943_247.jpg', word: 'Wizard' },
            { image: 'Photos/IMG_20251019_161657_379.jpg', word: 'Scarecrow' },
            { image: 'Photos/IMG_20251019_161133_941.jpg', word: 'Fireworks' },
            { image: 'Photos/IMG_20251019_161047_687.jpg', word: 'Bat' },
            { image: 'Photos/IMG_20251019_160956_540.jpg', word: 'Vampire' },
            { image: 'Photos/IMG_20251019_160820_005.jpg', word: 'Ghost' },
            { image: 'Photos/IMG_20251019_160644_141.jpg', word: 'Witch' },
            { image: 'Photos/IMG_20251019_160545_015.jpg', word: 'Jack-o\'-lantern' },
            { image: 'Photos/IMG_20251020_192659_254.jpg', word: 'Pumpkin' }
        ];

        // Function to shuffle array (Fisher-Yates algorithm)
        function shuffleArray(array) {
            for (let i = array.length - 1; i > 0; i--) {
                const j = Math.floor(Math.random() * (i + 1));
                [array[i], array[j]] = [array[j], array[i]];
            }
            return array;
        }

        // Display images in order
        const imagesColumn = document.getElementById('images-column');
        items.forEach(item => {
            const imageItem = document.createElement('div');
            imageItem.className = 'image-item';
            imageItem.innerHTML = `
                <img src="${item.image}" alt="${item.word}">
                <div class="placeholder"></div>
            `;
            imagesColumn.appendChild(imageItem);
        });

        // Display words in random order
        const wordsColumn = document.getElementById('words-column');
        const shuffledWords = shuffleArray([...items]);
        
        shuffledWords.forEach(item => {
            const wordItem = document.createElement('div');
            wordItem.className = 'word-item';
            wordItem.textContent = `[${item.word}]`;
            wordsColumn.appendChild(wordItem);
        });

        // PDF generation
        document.getElementById('download-btn').addEventListener('click', function() {
            const element = document.getElementById('content');
            const opt = {
                margin: 10,
                filename: 'halloween_matching_task.pdf',
                image: { type: 'jpeg', quality: 0.98 },
                html2canvas: { scale: 2 },
                jsPDF: { unit: 'mm', format: 'a4', orientation: 'portrait' }
            };
            
            html2pdf().set(opt).from(element).save();
        });
    </script>
</body>
